{
  "name": "@limo/utils",
  "version": "0.2.0",
  "description": "Developer's utility belt.",
  "displayName": "@limo/utils",
  "author": "Rashed Makkouk <rashed.makkouk@outlook.com>",
  "license": "UNLICENSED",
  "private": true,
  "main": "./lib/index.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "tsc-w": "tsc --watch",
    "build-delete": "rm -rf ./dist/*",
    "copy-meta": "cp -r ./{package.json,yarn.lock,README.md,LICENSE} ./dist/",
    "copy-files": "cp -r ./src/*.d.ts ./dist/types/",
    "publish-npm": "rm -rf c:/npm/@limo/utils/* && cp -r ./dist/* c:/npm/@limo/utils/",
    "build": "yarn build-delete && tsc --skipLibCheck && yarn copy-meta && yarn copy-files && yarn publish-npm",
    "uP": "yarn upgrade @limo/eslint-config --latest",
    "gen-docs": "yarn typedoc && cp -r ./docs/* c:/Nginx/html/docs/utils/"
  },
  "keywords": [
    "utils",
    "utilities"
  ],
  "presets": [
    "env"
  ],
  "devDependencies": {
    "@limo/eslint-config": "file:../../../../npm/@limo/eslint-config",
    "@types/color-convert": "^1.9.0",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.11.1",
    "@types/sqlstring": "^2.2.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "autolinker": "^3.14.1",
    "color-convert": "^2.0.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.7",
    "lodash": "^4.17.20",
    "mime-types": "^2.1.27",
    "moment": "^2.28.0",
    "normalizr": "^3.6.0",
    "path": "^0.12.7",
    "prettier": "^2.1.2",
    "sqlstring": "^2.3.2",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3",
    "uuid": "^8.3.0",
    "validator": "^13.1.17"
  },
  "peerDependencies": {
    "autolinker": "^3.14.1",
    "color-convert": "^2.0.1",
    "lodash": "^4.17.20",
    "mime-types": "^2.1.27",
    "moment": "^2.28.0",
    "normalizr": "^3.6.0",
    "path": "^0.12.7",
    "sqlstring": "^2.3.2",
    "uuid": "^8.3.0",
    "validator": "^13.1.17"
  }
}

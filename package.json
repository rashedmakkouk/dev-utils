{
  "name": "@limo/utils",
  "version": "0.4.0",
  "description": "Developer's utility belt.",
  "displayName": "@limo/utils",
  "author": "Rashed Makkouk <rashed.makkouk@outlook.com>",
  "license": "UNLICENSED",
  "private": true,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">= 12.16.1",
    "yarn": ">=1.4.0"
  },
  "keywords": [
    "utils",
    "utilities"
  ],
  "repository": {
    "type": "git",
    "url": "git@192.168.1.200:org/utils"
  },
  "scripts": {
    "empty-package": "rm -rf c:/npm/@limo/utils/*",
    "copy-package-metadata": "cp -r ./{package.json,yarn.lock,README.md,LICENSE} c:/npm/@limo/utils",
    "publish-local": "yarn copy-package-metadata && mkdir c:\\npm\\@limo\\utils\\lib && cp -r ./build/* c:/npm/@limo/utils/lib",
    "empty-build": "rm -rf ./build/*",
    "copy-build-files": "cp -r ./src/*.d.ts ./build",
    "compile": "yarn empty-build && tsc --build && yarn copy-build-files",
    "build": "yarn compile && yarn empty-package && yarn publish-local",
    "uP": "yarn upgrade @limo/eslint-config --latest",
    "gen-docs": "yarn typedoc && cp -r ./docs/* c:/Nginx/html/docs/utils/",
    "tsc": "tsc"
  },
  "dependencies": {
    "autolinker": "^3.14.2",
    "color-convert": "^2.0.1",
    "lodash": "^4.17.20",
    "mime-types": "^2.1.27",
    "moment": "^2.29.1",
    "normalizr": "^3.6.1",
    "path": "^0.12.7",
    "sqlstring": "^2.3.2",
    "url-parse": "^1.4.7",
    "uuid": "^8.3.1",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "@limo/eslint-config": "c:/npm/@limo/eslint-config",
    "@types/color-convert": "^1.9.0",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.14.7",
    "@types/sqlstring": "^2.2.1",
    "@types/url-parse": "^1.4.3",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.7",
    "prettier": "^2.1.2",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5"
  },
  "peerDependencies": {
    "autolinker": "^3.14.1",
    "color-convert": "^2.0.1",
    "lodash": "^4.17.20",
    "mime-types": "^2.1.27",
    "moment": "^2.29.1",
    "normalizr": "^3.6.0",
    "path": "*",
    "sqlstring": "^2.3.2",
    "url-parse": "^1.4.7",
    "uuid": "^8.3.1",
    "validator": "^13.1.17"
  }
}

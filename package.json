{
  "name": "@limo/utils",
  "version": "1.04.13",
  "description": "Utility belt.",
  "author": "RM",
  "license": "UNLICENSED",
  "private": true,
  "main": "lib/index.js",
  "types": "@types/index.d.ts",
  "scripts": {
    "tsc-w": "tsc --watch",
    "deleteBuild": "rm -rf c:/npm/@limo/utils/* && rm -rf ./dist/*",
    "copyMeta": "cp -r ./{package.json,yarn.lock,CHANGELOG.md,README.md} ./dist/",
    "copyTypes": "if not exist dist/@types mkdir dist\\@types && cp -r ./src/utils.d.ts ./dist/@types",
    "copyBuildToNPM": "cp -r ./dist/* c:/npm/@limo/utils/",
    "build": "yarn deleteBuild && yarn copyMeta && yarn copyTypes && tsc --skipLibCheck && yarn copyBuildToNPM",
    "uP": "yarn upgrade @limo/eslint-config --latest",
    "gen-docs": "yarn typedoc && cp -r ./docs/* c:/Nginx/html/docs/utils/"
  },
  "keywords": [
    "utils",
    "@limo",
    "utils"
  ],
  "presets": [
    "env"
  ],
  "devDependencies": {
    "@limo/eslint-config": "file:../../../../../npm/@limo/eslint-config",
    "@types/color-convert": "^1.9.0",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.10.1",
    "@types/sqlstring": "^2.2.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "autolinker": "^3.14.1",
    "color-convert": "^2.0.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.7",
    "lodash": "^4.17.20",
    "mime-types": "^2.1.27",
    "moment": "^2.28.0",
    "normalizr": "^3.6.0",
    "path": "^0.12.7",
    "prettier": "^2.1.1",
    "sqlstring": "^2.3.2",
    "typedoc": "^0.19.1",
    "typescript": "^4.0.2",
    "uuid": "^8.3.0",
    "validator": "^13.1.1"
  },
  "peerDependencies": {
    "autolinker": "^3.14.1",
    "color-convert": "^2.0.1",
    "lodash": "^4.17.20",
    "mime-types": "^2.1.27",
    "moment": "^2.28.0",
    "normalizr": "^3.6.0",
    "path": "^0.12.7",
    "sqlstring": "^2.3.2",
    "uuid": "^8.3.0",
    "validator": "^13.1.1"
  }
}

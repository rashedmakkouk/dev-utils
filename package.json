{
  "name": "@limo/utils",
  "version": "0.2.0",
  "description": "Developer's utility belt.",
  "displayName": "@limo/utils",
  "author": "Rashed Makkouk <rashed.makkouk@outlook.com>",
  "license": "UNLICENSED",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "empty-build": "rm -rf c:/npm/@limo/utils/*",
    "build-metadata": "cp -r ./{package.json,yarn.lock,README.md,LICENSE} c:/npm/@limo/utils",
    "build-package": "cp -r ./dist c:/npm/@limo/utils",
    "empty-dist": "rm -rf ./dist/*",
    "dist-files": "cp -r ./src/*.d.ts ./dist",
    "compile": "tsc --build",
    "build": "npm run empty-dist && npm run compile && npm run dist-files && npm run empty-build && npm run build-metadata && npm run build-package",
    "uP": "yarn upgrade @limo/eslint-config --latest",
    "gen-docs": "yarn typedoc && cp -r ./docs/* c:/Nginx/html/docs/utils/",
    "tsc": "tsc"
  },
  "keywords": [
    "utils",
    "utilities"
  ],
  "presets": [
    "env"
  ],
  "devDependencies": {
    "@limo/eslint-config": "file:../../../../npm/@limo/eslint-config",
    "@types/color-convert": "^1.9.0",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.11.2",
    "@types/sqlstring": "^2.2.1",
    "@types/url-parse": "^1.4.3",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "autolinker": "^3.14.1",
    "color-convert": "^2.0.1",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.7",
    "lodash": "^4.17.20",
    "mime-types": "^2.1.27",
    "moment": "^2.29.0",
    "normalizr": "^3.6.0",
    "path": "^0.12.7",
    "prettier": "^2.1.2",
    "sqlstring": "^2.3.2",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3",
    "url-parse": "^1.4.7",
    "uuid": "^8.3.0",
    "validator": "^13.1.17"
  },
  "peerDependencies": {
    "autolinker": "^3.14.1",
    "color-convert": "^2.0.1",
    "lodash": "^4.17.20",
    "mime-types": "^2.1.27",
    "moment": "^2.29.0",
    "normalizr": "^3.6.0",
    "path": "^0.12.7",
    "sqlstring": "^2.3.2",
    "url-parse": "^1.4.7",
    "uuid": "^8.3.0",
    "validator": "^13.1.17"
  }
}

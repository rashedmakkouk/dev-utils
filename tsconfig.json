{
  "extends": "@rashedmakkouk/eslint-config/lib/bases/tsconfig.base.json",
  "display": "Node.js Package",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "allowJs": true,
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "noEmitOnError": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "scripts"
  ],
  "include": [
    "src/**/*"
  ]
}